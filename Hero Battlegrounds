-- Hero Battlegrounds Script

-- Function to enable god mode with error handling
local function enableGodMode()
    pcall(function()
        local player = game.Players.LocalPlayer
        local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            humanoid.MaxHealth = math.huge
            humanoid.Health = math.huge
        else
            warn("Humanoid not found.")
        end
    end)
end

-- Function to teleport to a specific position with error handling
local function teleportTo(position)
    pcall(function()
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            player.Character.HumanoidRootPart.CFrame = CFrame.new(position)
        else
            warn("HumanoidRootPart not found.")
        end
    end)
end

-- Function to show a sliding notification with a message
local function showNotification(message)
    pcall(function()
        local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")
        local screenGui = Instance.new("ScreenGui", playerGui)
        local frame = Instance.new("Frame", screenGui)
        local textLabel = Instance.new("TextLabel", frame)

        screenGui.Name = "NotificationGui"
        frame.Size = UDim2.new(0, 300, 0, 50)
        frame.Position = UDim2.new(1, 0, 1, -60)
        frame.BackgroundTransparency = 0.5
        frame.BackgroundColor3 = Color3.new(0, 0, 0)

        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.Text = message
        textLabel.TextColor3 = Color3.new(1, 1, 1)
        textLabel.BackgroundTransparency = 1

        -- Slide in the frame
        frame:TweenPosition(UDim2.new(1, -310, 1, -60), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.5, true)
        wait(3)
        -- Slide out the frame
        frame:TweenPosition(UDim2.new(1, 0, 1, -60), Enum.EasingDirection.In, Enum.EasingStyle.Quad, 0.5, true)
        wait(0.5)
        screenGui:Destroy()
    end)
end

-- Attempt to activate god mode
pcall(enableGodMode)

-- Example teleport usage
pcall(teleportTo, Vector3.new(0, 50, 0)) -- Teleports to a position 50 units above the ground

-- Show notification
showNotification("discord - riofluxxx")

print("Hero Battlegrounds script executed successfully!")
